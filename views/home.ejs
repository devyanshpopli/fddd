<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>KITPLACE</title>
    <link rel="shortcut icon" type="image/jpeg" href="img/logo.png" />
    <link
      href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="bg-indigo-900 relative overflow-hidden h-screen bg-scroll">
      <img
        src="img/banner.jpg"
        class="absolute h-full w-full object-cover opacity-30"
      />
      <div class="inset-0 bg-black opacity-25 absolute"></div>
      <header class="absolute top-0 left-0 right-0 z-20">
        <nav class="container mx-auto px-6 md:px-12 py-4">
          <div class="md:flex justify-between items-center">
            <div class="flex justify-between items-center">
              <h1 class="text-5xl">
                KIT<span class="font-bold text-yellow-300">PLACE</span>
              </h1>
              <div class="md:hidden">
                <button class="text-white focus:outline-none" id="ham">
                  <svg
                    class="h-12 w-12"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      d="M4 6H20M4 12H20M4 18H20"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    ></path>
                  </svg>
                </button>
              </div>
            </div>
            <div
              class="hidden bg-purple-800 flex flex-col items-center"
              id="menu"
            >
              <a
                class="text-lg uppercase mx-3 text-white cursor-pointer hover:text-gray-300 pt-4"
                href="/"
              >
                Home
              </a>
              <a
                class="text-lg uppercase mx-3 text-white cursor-pointer hover:text-gray-300 pt-4"
                href="/about-us"
              >
                About Us
              </a>
              <a
                class="text-lg uppercase mx-3 text-white cursor-pointer hover:text-gray-300 pt-4"
                href="/pricing"
              >
                Our Pricing
              </a>
              <a
                class="text-lg uppercase mx-3 text-white cursor-pointer hover:text-gray-300 pt-4"
                href="/team"
              >
                Our Team
              </a>
              <a
                class="text-lg uppercase mx-3 text-white cursor-pointer hover:text-gray-300 pt-4 pb-4"
                href="/contact-us"
              >
                Contact Us
              </a>
            </div>
            <div class="hidden md:flex items-center">
              <a
                class="text-lg uppercase mx-3 text-white cursor-pointer hover:text-gray-300"
                href="/"
              >
                Home
              </a>
              <a
                class="text-lg uppercase mx-3 text-white cursor-pointer hover:text-gray-300"
                href="/about-us"
              >
                About Us
              </a>
              <!-- <a
                class="text-lg uppercase mx-3 text-white cursor-pointer hover:text-gray-300"
                href="/pricing"
              >
                Our Pricing
              </a> -->
              <a
                class="text-lg uppercase mx-3 text-white cursor-pointer hover:text-gray-300"
                href="/team"
              >
                Our Team
              </a>
              <a
                class="text-lg uppercase mx-3 text-white cursor-pointer hover:text-gray-300"
                href="/contact-us"
              >
                Contact Us
              </a>
            </div>
          </div>
        </nav>
      </header>

      <div
        class="container mx-auto px-6 md:px-12 relative z-10 flex items-center py-32 xl:py-40"
      >
        <div class="lg:w-3/5 xl:w-2/5 flex flex-col items-start relative z-10">
          <span class="font-bold uppercase text-yellow-300 ml3">
            An initiative by KIET students
          </span>
          <h1
            class="font-bold text-6xl sm:text-7xl text-white leading-tight mt-4 ml15"
          >
            <span class="word">Placements</span>
            <span class="word">Made</span>
            <span class="word">Easy</span>
            <!-- <span class="word">Cards</span>
            <br />
            <span class="word">with</span>
            <span class="word">us</span> -->
          </h1>
          <div class="flex ml15">
            <a
              href="/login"
              class="block bg-white hover:bg-gray-100 py-3 px-4 flex-auto rounded-lg text-lg text-gray-800 font-bold uppercase mt-10 word"
            >
              Login
            </a>
            <a
              href="/register"
              class="block bg-white hover:bg-gray-100 py-3 px-4 mx-6 rounded-lg flex-auto text-lg text-gray-800 font-bold uppercase mt-10 word"
            >
              Sign Up
            </a>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>

    <script>
      const ham = document.querySelector('#ham');
      const menu = document.querySelector('#menu');

      ham.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    </script>
    <script>
      // Wrap every letter in a span
      var textWrapper = document.querySelector('.ml3');
      textWrapper.innerHTML = textWrapper.textContent.replace(
        /\S/g,
        "<span class='letter'>$&</span>"
      );
      var m = true;
      anime.timeline({ loop: 1 }).add({
        targets: '.ml3 .letter',
        opacity: [0, 1],
        easing: 'easeInOutQuad',
        duration: 20,
        delay: (el, i) => 150 * (i + 1),
      });
    </script>
  </body>
</html>
