        <b class="flex-center-align">Email Address</b>
        <input type="email" placeholder="email@example.com" name="email" />
        <b class="flex-center-align">Your Message / Feedback</b>

        <textarea rows="6" name="message"></textarea>
        <div>
          <button class="message-btn" type="submit">Send Message</button>
        </div>
        <p id="my-form-status"></p>
      </div>
    </form>
